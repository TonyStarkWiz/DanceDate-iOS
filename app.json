{
  "expo": {
    "name": "DanceDate",
    "slug": "dancedate-ios",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "dancedateios",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#4A148C"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.antho.dancedate",
      "buildNumber": "2",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSCameraUsageDescription": "We use the camera so you can take photos for your dance profile and share dance moments.",
        "NSPhotoLibraryUsageDescription": "We access your photo library so you can select profile pictures and share dance photos.",
        "NSPhotoLibraryAddUsageDescription": "We save dance photos and videos back to your library on request.",
        "NSLocationWhenInUseUsageDescription": "We use your location to find dance events near you and suggest local dance partners.",
        "NSMicrophoneUsageDescription": "We use the microphone to capture audio with your dance videos and for voice messages in chat.",
        "NSFaceIDUsageDescription": "We use Face ID to securely log you into your dance profile.",
        "NSContactsUsageDescription": "We access your contacts to help you find dance partners you already know.",
        "NSBluetoothAlwaysUsageDescription": "We use Bluetooth to connect with nearby dance partners and share dance playlists.",
        "NSBluetoothPeripheralUsageDescription": "We use Bluetooth to connect with nearby dance partners and share dance playlists.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "We use your location to find dance events near you and suggest local dance partners.",
        "CFBundleDisplayName": "DanceDate",
        "CFBundleName": "DanceDate",
        "CFBundleShortName": "DanceDate",
        "UIRequiresFullScreen": true,
        "UIStatusBarStyle": "light-content",
        "UIViewControllerBasedStatusBarAppearance": false,
        "UIBackgroundModes": [
          "remote-notification",
          "background-fetch",
          "background-processing"
        ],
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": false,
          "NSExceptionDomains": {
            "firebaseapp.com": {
              "NSExceptionAllowsInsecureHTTPLoads": false,
              "NSExceptionMinimumTLSVersion": "1.2",
              "NSExceptionRequiresForwardSecrecy": true
            },
            "googleapis.com": {
              "NSExceptionAllowsInsecureHTTPLoads": false,
              "NSExceptionMinimumTLSVersion": "1.2",
              "NSExceptionRequiresForwardSecrecy": true
            }
          }
        }
      },
      "entitlements": {
        "aps-environment": "production",
        "com.apple.developer.associated-domains": [
          "applinks:dancedate.app"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#4A148C"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.antho.dancedate",
      "versionCode": 1,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.RECORD_AUDIO",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.BLUETOOTH",
        "android.permission.BLUETOOTH_ADMIN"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png",
      "viewport": {
        "width": "device-width",
        "initialScale": 1,
        "maximumScale": 1,
        "userScalable": false
      }
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#4A148C"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow DanceDate to access your camera to take dance photos and videos."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow DanceDate to access your photo library to select dance photos and videos."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#4A148C",
          "sounds": ["./assets/sounds/notification.wav"]
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow DanceDate to use your location to find dance events near you."
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static",
            "deploymentTarget": "15.1"
          },
          "android": {
            "compileSdkVersion": 34,
            "targetSdkVersion": 34,
            "buildToolsVersion": "34.0.0"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "fc1e1cb9-f859-4555-b7aa-a862feb816e6"
      }
    },
    "owner": "warmbeach52757",
    "privacy": "public",
    "description": "Find your perfect dance partner! Connect with dancers in your area, discover dance events, and start your dance journey today.",
    "keywords": [
      "dance",
      "dating",
      "social",
      "events",
      "partners",
      "salsa",
      "bachata",
      "tango",
      "swing",
      "ballroom"
    ],
    "primaryColor": "#4A148C",
    "backgroundColor": "#4A148C"
  }
}
